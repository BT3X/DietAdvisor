    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31">
        <activity
            android:name=".AnalysisResult"
            android:exported="false"
            android:theme="@style/CustomAppTheme"/>
        <activity
            android:name=".RecognitionResult"
            android:exported="false"
            android:theme="@style/CustomAppTheme"/>
        <activity
            android:name=".profile"
            android:exported="false"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Recommendations"
            android:exported="false"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Tracking"
            android:exported="false"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".HomePage"
            android:exported="false"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".SignUpwithOAuth"
            android:exported="false"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".SignUp"
            android:exported="false"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/CustomAppTheme"> <!-- Set exported to true for the main entry point -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>