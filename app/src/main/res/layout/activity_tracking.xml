<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Tracking">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView2"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo_without_bg" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="@string/tracking_convo"
            android:textSize="@dimen/textSizeHeader"
            android:fontFamily="@font/itim"
            android:textColor="@color/greenText"/>
    </LinearLayout>

    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="@string/tracking_title"
        android:fontFamily="@font/lemon"
        android:textSize="@dimen/textSizePageName"
        android:paddingBottom="5dp" />

    <Button
        android:id="@+id/pick_date_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight="0.07"
        app:layout_constraintTop_toBottomOf="@id/page_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button"
        android:text="@string/select_date"
        android:textSize="@dimen/textSizeContent"
        android:textColor="@color/grayText"
        android:fontFamily="@font/itim"
        android:textAllCaps="false"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/toggle_switches"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/pick_date_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/calories"
                android:textSize="@dimen/textSizeContent"/>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/calorie_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:trackTint="@color/switch_track_color"
                app:thumbTint="@color/grayTextInTextView"
                style="@style/Widget.App.Switch"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_margin="8dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/carbohydrate"
                android:textSize="@dimen/textSizeContent"/>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/carb_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true"
                app:trackTint="@color/switch_track_color"
                app:thumbTint="@color/grayTextInTextView"
                style="@style/Widget.App.Switch"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_margin="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/protein"
                android:textSize="@dimen/textSizeContent"/>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/protein_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true"
                app:trackTint="@color/switch_track_color"
                app:thumbTint="@color/grayTextInTextView"
                style="@style/Widget.App.Switch"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_margin="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/fat"
                android:textSize="@dimen/textSizeContent"/>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/fat_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:checked="true"
                app:trackTint="@color/switch_track_color"
                app:thumbTint="@color/grayTextInTextView"
                style="@style/Widget.App.Switch"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_margin="8dp"/>
        </LinearLayout>


    </LinearLayout>


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggle_switches"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar"/>





    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintBottom_toBottomOf="parent"
        android:baselineAligned="false">

        <FrameLayout
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"

                app:srcCompat="@drawable/home"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="707dp" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/tracking_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/greenButton"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/tracking_icon"
                tools:layout_editor_absoluteX="83dp"
                tools:layout_editor_absoluteY="707dp" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/recommendations_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/recommendations"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="707dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/profile_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/user_icon"
                tools:layout_editor_absoluteX="221dp"
                tools:layout_editor_absoluteY="707dp" />
        </FrameLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>