<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="CustomAppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/greenText</item>
        <item name="colorAccent">@color/greenButton</item>
        <!-- You can customize other theme attributes here -->
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
        <item name="android:fontFamily">@font/itim</item>
        <item name="android:textColor">@color/greenText</item>
        <item name="android:textAllCaps">false</item>
        <item name="materialSwitchStyle">@style/Widget.App.Switch</item>

    </style>
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>
    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/greenButton</item>
        <item name="colorSurfaceVariant">@color/grayTextInTextView</item>
    </style>
</resources>